{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["/@*mixin/", "ignores"]
            }
        ],
        "declaration-colon-newline-after": null,
        "no-eol-whitespace": null
    }
}